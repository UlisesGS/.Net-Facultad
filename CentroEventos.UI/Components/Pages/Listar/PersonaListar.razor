@page "/persona-listar"
@using CentroEventos.Aplicacion
@using CentroEventos.Aplicacion.CasosDeUsos.Personas
@using CentroEventos.Aplicacion.Entidades
@rendermode InteractiveServer
@inject NavigationManager Navigation
@inject PersonaListarUseCase Listar
@inject ServicioLogin Login


<div class="bg-personas-header rounded p-3">
    <div class="d-flex align-items-start flex-column flex-md-row gap-3 mb-3">
        <h4 class="m-0 text-white p-2">Listado de Personas</h4>
        <button type="button" class="btn btn-success mt-2" @onclick="crear">
            <i class="bi bi-plus-circle me-1"></i> Crear Persona
        </button>
    </div>


    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="thead-custom">
                <tr>
                    <th>ID</th>
                    <th>DNI</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Email</th>
                    <th>Telefono</th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var persona in personas)
                {
                    <tr>
                        <td>@persona.Id</td>
                        <td>@persona.DNI</td>
                        <td>@persona.Nombre</td>
                        <td>@persona.Apellido</td>
                        <td>@persona.Email</td>
                        <td>@persona.Telefono</td>
                        <td>
                            <button type="button" class="btn btn-primary btn-sm me-1">
                                <i class="bi bi-pencil-square"></i>
                            </button>
                            <button type="button" class="btn btn-danger btn-sm" >
                                <i class="bi bi-archive"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<style>
.bg-personas-header {
    background-color: #1c2a29;
}

.thead-custom {
    background-color: #478689 ;
}

.thead-custom th {
    background-color: #478689 ;
    color: white ;
}


</style>

@code {

    private List<Persona> personas = new();
    private Usuario? user;

    private bool primerRender = true;

    protected override async Task OnAfterRenderAsync(bool Render)
    {
        if (primerRender)
        {
            await Task.Delay(10);
            primerRender = false;

            var user = Login.GetUser();

            if (user == null)
            {
                Navigation.NavigateTo("/", true);
                return;
            }

            personas = Listar.Ejecutar();
            StateHasChanged();
        }
    }

    private void crear()
    {
        Navigation.NavigateTo("/persona-crear");
    }

}